# ===============================
# Database configuration
# ===============================

# Hostname of MariaDB service (Docker service name)
DB_HOST=mariadb

# Port inside Docker network
DB_PORT=3306

# Database user (non-root)
DB_USER=student

# Database password
DB_PASSWORD=student

# Template database name (contains exercises + dataset)
TEMPLATE_DB=sql_training


# ===============================
# Optional future settings
# ===============================

# FastAPI environment (development / production)
APP_ENV=development

# Debug mode (true / false)
DEBUG=true
